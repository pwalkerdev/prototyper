{
  "name": "prototyper",
  "displayName": "Prototyper",
  "description": "Compile, test & debug* code snippets seamlessly inside VSCode!\r\n\r\n*Coming Soon!",
  "version": "0.0.3",
  "publisher": "pwalkerdev",
  "icon": "./dist/logo/pt-logo.png",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Debuggers"
  ],
  "activationEvents": [
    "onFileSystem:prototypewriter"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "breakpoints": [
      {
        "language": "csharp"
      }
    ],
    "commands": [
      {
        "command": "extension.prototyper.evaluatecsharp",
        "title": "Prototyper: Evaluate C#"
      },
      {
        "command": "extension.prototyper.evaluatejs",
        "title": "Prototyper: Evaluate JS / TS"
      },
      {
        "command": "extension.prototyper.debugcsharp",
        "title": "Prototyper: Debug C#"
      }
    ],
    "menus": {
      "commandPalette": [
        {
          "command": "extension.prototyper.evaluatecsharp",
          "when": "editorLangId == csharp || editorLangId != javascript"
        },
        {
          "command": "extension.prototyper.evaluatejs",
          "when": "editorLangId == javascript || editorLangId != csharp"
        },
        {
          "command": "extension.prototyper.debugcsharp",
          "when": "editorLangId == csharp && !inDebugMode"
        }
      ]
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/pwalkerdev/prototyper"
  },
  "scripts": {
    "vscode:prepublish": "yarn run package",
    "compile": "webpack",
    "prewatch": "dotnet build ./.modules/Headless/Headless.sln -f net8.0 -c Debug --no-self-contained",
    "watch": "webpack --watch",
    "prepackage": "dotnet publish ./.modules/Headless/Headless.sln -f net8.0 -c Release --no-self-contained && node -e \"const fs = require('fs'); const data = fs.readFileSync('./.modules/Headless/Headless/bin/Release/net8.0/win-x64/publish/Headless.exe'); fs.writeFileSync('./dist/bin/Headless.exe', data);\"",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "yarn run compile-tests && yarn run compile && yarn run lint",
    "lint": "eslint src --ext ts",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.6",
    "@types/node": "18.x",
    "@types/vscode": "^1.85.0",
    "@typescript-eslint/eslint-plugin": "^6.13.1",
    "@typescript-eslint/parser": "^6.13.1",
    "@vscode/test-cli": "^0.0.4",
    "@vscode/test-electron": "^2.3.8",
    "eslint": "^8.54.0",
    "ts-loader": "^9.5.1",
    "typescript": "^5.3.2",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4"
  },
  "dependencies": {
    "@vscode/debugadapter": "^1.65.0"
  }
}
